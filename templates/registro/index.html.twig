{% extends 'base.html.twig' %}

{% block title %}Hello RegistroController!{% endblock %}

{% block body %}
    {% for message in app.flashes('exito') %}
        <div class="alert alert-primary" role="alert">
            {{ message }}
        </div>
    {% endfor %}

    {% if usuarios %}
            <div>
                <table class="table table-hover table-dark" id="dataTable">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nombres</th>
                        <th scope="col">Apellidos</th>
                        <th scope="col">Email</th>
                        <th></th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        {% for usuario in usuarios %}
                            <th scope="row">{{  usuario.id}}</th>
                            <td>{{  usuario.nombres }}</td>
                            <td>{{  usuario.apellidos }}</td>
                            <td>{{  usuario.email}}</td>
                            <td>
                                <a class="btn btn-success btn-icon-split" onclick="eliminar({{ usuario.id }})">
                                <span class="icon text-white-50">
                                    <i class="fas fa-pencil"></i>
                                </span>
                                </a>
                            </td>
                            <td>
                                <a class="btn btn-danger btn-icon-split" onclick="eliminar({{ usuario.id }})">
                                <span class="icon text-white-50">
                                    <i class="fas fa-trash"></i>
                                </span>
                                </a>
                            </td>
                        {% endfor %}
                    </tr>

                </table>
            </div>
    {% else %}
        <div class="alert alert-info" role="alert">
            No hay usuarios registrados aun
        </div>
    {% endif %}

    <div class="col-lg-6">
        <h2>Registrar nuevo usuario</h2>
        {{ form(form) }}
    </div>


{% endblock %}
