{% extends 'baseInicios.html.twig' %}

{% block title %}Hello RegistroController!{% endblock %}

{% block body %}
    <div class="row justify-content-center text-center align-items-center ">

        <div class="col-xl-6">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->

                        <div class="col-lg-12 text-center">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Bienvenido</h1>
                                </div>
                                <form class="user">
                                    <div class="form-group">
                                        <input type="email" class="form-control form-control-user" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="Ingrese su Email">
                                    </div>
                                    <div class="form-group">
                                        <input type="password" class="form-control form-control-user" id="exampleInputPassword" placeholder="Contraseña">
                                    </div>
                                    <div class="form-group">
                                        <div class="custom-control custom-checkbox small">
                                            <input type="checkbox" class="custom-control-input" id="customCheck">
                                            <label class="custom-control-label" for="customCheck">Recordar mi cuenta</label>
                                        </div>
                                    </div>
                                    <button class="btn btn-primary btn-user btn-block" onclick="iniciaSesion()">
                                        Iniciar Sesion
                                    </button>
                                    <hr>
                                </form>
                                <div class="text-center">
                                    <a class="small" href="forgot-password.html">Olvidaste tu contraseña?</a>
                                </div>
                                <div class="text-center">
                                    <a class="small" href="register.html">Crear una cuenta!</a>
                                </div>
                            </div>
                        </div>

                </div>
            </div>

        </div>

    </div>

{% endblock %}
